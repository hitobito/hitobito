- prefix = 'devise.registrations.edit'
-title t("#{prefix}.change_password")

= standard_form(resource, {url: password_path(resource_name), method: :put}) do |f|
  = f.hidden_field :reset_password_token
  = f.error_messages
  = f.labeled(:password, t("#{prefix}.new_password")) { f.input_field(:password) }
  = f.labeled(:password_confirmation,
              t("#{prefix}.new_password_confirmation")) { f.input_field(:password_confirmation) }
  = f.indented do
    = submit_button(f, t("#{prefix}.change_password"))
