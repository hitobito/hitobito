- if p.application
  - if p.application.waiting_list?
    = link_to("#{icon(:check)}&nbsp; #{t('.label')}".html_safe,
              waiting_list_group_event_application_market_path(@group, @event, p.id),
              title: t('.title_active'),
              remote: true,
              method: :delete)
    - if p.application.waiting_list_comment?
      &nbsp;
      = badge(icon('comment', class: 'icon-white'), 'info', p.application.waiting_list_comment)

  - else
    .popover-small
      %a{ title: t('.title_inactive'), data: { bs_toggle: 'popover', bs_content: render('popover_waiting_list', p: p).to_str.html_safe }}
        = "#{icon(:minus)}&nbsp; #{t('.label')}".html_safe
