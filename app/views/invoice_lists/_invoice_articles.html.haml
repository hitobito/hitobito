    = select("temp", "invoice_article_id", nil,
      { include_blank: true },
      { id: "invoice_item_article" }) do
      = group_dropdown_invoice_articles(group).pluck(:number, :name, :id, :description).each do |ia| 
        = content_tag(:option, "#{ia[0]} - #{ia[1]}", value: ia[2], data: { name: ia[0], description: ia[3] })
