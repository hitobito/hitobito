.modal
  .modal-dialog
    .modal-content
      .modal-header
        %h5.bold.modal-title
          %b= title

      = standard_form(path_args(entry),
        url: url, method: method) do |f|
        .modal-body
          .row-fluid
            = hidden_field_tag('ids', people_ids)
            = yield

            .checkboxes
              - if role_types.present?
                = available_role_types_checkboxes(role_types)
              - else
                = t('.no_entries')
        .modal-footer
          = submit_button(f, submit_label)
          = link_to(ti('button.cancel'), '#',
            class: 'link cancel',
            onclick: "event.preventDefault(); $('#multiselect-modal').html('')")
