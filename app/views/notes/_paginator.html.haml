- if notes.total_pages > 1
  %ul.pagination.pagination-sm.notes-pagination
    %li.page-item{class: notes.first_page? && :disabled}
      = link_to_previous_page notes,
                              t('views.pagination.previous'),
                              param_name: :notes_page,
                              params: { anchor: 'notes' },
                              class: 'page-link'
      - if notes.first_page?
        %a.page-link= t('views.pagination.previous')
    %li.page-item{class: notes.last_page? && :disabled}
      = link_to_next_page notes,
                          t('views.pagination.next'),
                          param_name: :notes_page,
                          params: { anchor: 'notes' },
                          class: 'page-link'
      - if notes.last_page?
        %a.page-link= t('views.pagination.next')
