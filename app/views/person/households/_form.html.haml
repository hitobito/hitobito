- f = StandardFormBuilder.new(:person, @person, self, {})

- if @household.address_changed?
  = content_tag(:div, class: 'animated-highlight') do
    %div.alert.alert-warning.address-updated
      = t('.address_updated')
    = render 'contactable/address_fields', f: f
- else
  = render 'contactable/address_fields', f: f

= content_tag(:div, class: @household.people_changed? ? 'animated-highlight' : nil) do
  = render 'person/households/fields', f: f
