!!! 5

%html
  %head
    %meta{:charset => 'utf-8'}
    %title= strip_tags(@title)
    = csrf_meta_tag

    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    = stylesheet_link_tag 'application', :media => 'all'

    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}

    = yield :head

  %body

    %header
      .container-fluid
        = link_to 'MyApp', root_path, :class => 'brand'
        .options
          = render 'layouts/options'

    %nav
      .container-fluid
        = render 'layouts/nav'

    .container-fluid

      %h1= @title

      = render :partial => 'layouts/flash', :collection => [:notice, :alert], :as => :level

      .actions.btn-toolbar
        .pull-right= yield :actions
        .pull-left= yield :tools

      #content= yield

      %footer
        %p
          &copy; Puzzle ITC #{Time.zone.now.year}

  = javascript_include_tag 'application'
  = javascript_tag yield(:javascripts) if content_for?(:javascripts)
