- if @year
  .float-end
    = render 'shared/page_per_year', paging_params: { returning: true }

= crud_table do |t|
  - t.col(t.sort_header(:title)) do |item|
    = content_tag(:strong) do
      = link_to(item.title, group_invoice_run_invoices_path(item.group, item))
  - t.col(InvoiceRun.human_attribute_name(:recipient_source)) do |item|
    = link_to(item.recipient_source_label, item.recipient_source.path_args) if item.recipient_source && item.recipient_source.is_a?(MailingList)

  - t.sortable_attrs(:recipients_total, :recipients_paid, :amount_total, :amount_paid)

  - t.col(nil) do |item|
    - if can?(:destroy, item)
      = link_to(icon(:'trash-alt', filled: false),
                group_invoice_run_invoice_runs_destroy_path(group_id: item.group_id, invoice_run_id: item.id),
                class: 'action', title: ti(:"link.delete"), alt: ti(:"link.delete"),
                data: { method: :get },
                remote: true)
