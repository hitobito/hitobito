= paginate @versions

- binding.pry
- if @versions.present?
  - @versions.group_by { _1.first.attributes.values_at("created_at", "whodunnit", "whodunnit_type") }.each do |_, versions|
    .row.mb-3
      .col-4
        = versions.first.header
      .col-8
        - versions.each do |v|
          = v.changes

- else
  %div= t('people.log.no_changes')

= paginate @versions
