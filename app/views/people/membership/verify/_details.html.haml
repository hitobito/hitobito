#details
    = render_extensions(:details_header)
    - if person
        #member-img
            = image_tag(upload_url(person, :picture))
        #member-name
            = person.full_name
        = render_extensions(:below_name)
        - if member?
            %div{:class => 'alert alert-success'}
                %span.fas.fa-check
                = t('verify_membership.status_valid')
        - else
            %div{:class => 'alert alert-danger'}
                %span.fas.fa-times-circle
                = t('verify_membership.status_invalid')
    - else
        %div{:class => 'alert alert-danger'}
            %span.fas.fa-times-circle
            = t('verify_membership.not_found')
    = render_extensions(:member_details)