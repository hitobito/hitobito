= field_set_tag do
  = f.labeled :logo do
    = f.file_field :logo, type: :file #, accept: Group::LogoUploader.accept_extensions

  - if upload_exists?(entry, :logo)
    = f.labeled :remove_logo do
      = f.boolean_field :remove_logo
  = f.labeled_i18n_enum_field :logo_position, InvoiceConfig.logo_position_labels.to_a

= render_extensions(:layout_fields, locals: { f: f })
