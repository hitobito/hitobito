- if event.attr_used?(:priorization) || event.attr_used?(:waiting_list)
  = form_tag nil, class: 'form-inline mb-2', method: :get do
    .btn-group{data_toggle: 'buttons-checkbox'}
      - if event.attr_used?(:priorization)
        = render 'prio_check', prio: 1
        = render 'prio_check', prio: 2
        = render 'prio_check', prio: 3
      - if event.attr_used?(:waiting_list)
        %label.checkbox
          = check_box_tag :waiting_list, true, params[:waiting_list]
          = t('.national_waitinglist')

    = submit_tag t('global.button.refresh'), class: 'btn btn-sm btn-outline-primary mb-2'
