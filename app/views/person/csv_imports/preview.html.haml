%h3
  =t('.import_details_html', role: role_name, group: group)

= render 'preview_table'

= standard_form(:field_mappings, url: group_csv_imports_path, builder: PlainObjectFormBuilder) do |f|
  = render 'hidden_form_fields'
  .btn-toolbar
    .btn-group
      = f.submit(t('.import_now_button'), class: 'btn btn-sm btn-primary')
    .btn-group
      = f.button(t('global.button.back'), class: 'btn btn-sm btn-outline-primary', value: 'back')
    = link_to(t('global.button.cancel'), group_people_path(group), class: 'link mt-1')

