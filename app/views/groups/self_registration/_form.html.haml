= entry_form(url: group_self_registration_path, cancel_url: '', buttons_top: false, buttons_bottom: false) do |f|
  = f.honeypot(:verification)
  = render Steps::StepsComponent.new(steps: entry.steps, step: entry.step, form: f, policy_finder: policy_finder)

  - if entry.first_step?
    .row
      = f.indented do
        = f.help_block do
          = t('groups.self_registration.form.has_account')
          = link_to(t('groups.self_registration.form.to_login_page'), group_self_inscription_path)
