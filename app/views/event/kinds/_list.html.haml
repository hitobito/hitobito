%ul.nav.nav-sub.border-0
  %li{class: "#{'active' unless request.params[:deleted_only]} mb-2"}
    = link_to(t('event/kinds.tabs.overview'), '/event_kinds')
  %li{class: "#{'active' if request.params[:deleted_only]} mb-2"}
    = link_to(t('event/kinds.tabs.deleted'), '/event_kinds?deleted_only=true')
    
  = crud_table do |t|
    - t.sortable_attrs :label, :short_name
    - if kind_categories_used?
      - t.sortable_attrs :kind_category
    - render_extensions 'list_attrs', locals: { t: t }
    - t.sortable_attrs :updated_at, :deleted_at
    - add_table_actions(t)
 
