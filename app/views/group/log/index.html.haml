- if @versions.present?
  = render "shared/pagination_without_count", models: @versions

  - @versions.group_by { |v| [v.created_at, v.main, v.whodunnit]}.each do |header, versions|
    .row.mb-3
      .col-4
        = versions.first.header(include_changed_object: true)
      .col-8
        %br
        - versions.each do |v|
          = v.changes

  = render "shared/pagination_without_count", models: @versions

- else
  %div= t('people.log.no_changes')
