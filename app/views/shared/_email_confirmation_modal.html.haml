#email-confirmation-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h5.bold.modal-title=modal_title
      .model-body.p-3
        .btn-group.mb-0
          = link_to(send_email_label,
            send_email_route,
            remote: true,
            method: method,
            onclick: "$('#email-confirmation-modal').modal('hide')",
            class: "btn btn-sm btn-primary")
        .btn-group.mb-0
          = link_to(send_no_email_label,
            send_no_email_route,
            remote: true,
            method: method,
            onclick: "$('#email-confirmation-modal').modal('hide')",
            class: "btn btn-sm btn-outline-primary")
        = link_to(t("global.button.cancel"), '#',
          class: "link cancel",
          onclick: "event.preventDefault(); $('#email-confirmation-modal').modal('hide')")
