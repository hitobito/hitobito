%p= t('.only_add_persons_with_tags')

.shown
  = f.collection_select(:included_subscription_tags_ids,
                        @possible_tags,
                        :third,
                        :first,
                        { },
                        { class: 'chosen-select',
                          multiple: true,
                          data: { chosen_no_results: t('global.chosen_no_results'),
                                  placeholder: ' ' } })

