%template#multiselectActions
  %th.multiselect(colspan="6")
    %span
      .count
      = ti('selected')
    = extended_all_checkbox(@tags)
    .actions
      = action_button(translate('.merge_tags'),
        merge_tags_path,
        :tags,
        data: { checkable: true, method: :get },
        remote: true)
