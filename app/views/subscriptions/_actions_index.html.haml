- if can?(:new, @mailing_list.subscriptions.new)
  = action_button(t('.add_person'),
                  new_group_mailing_list_person_path(@group, @mailing_list), 'plus')
  = action_button(t('.add_group_roles'),
                  new_group_mailing_list_group_path(@group, @mailing_list), 'plus')
  = action_button(t('.add_event'),
                  new_group_mailing_list_event_path(@group, @mailing_list), 'plus')
  = action_button(t('.exclude_person'), new_group_mailing_list_exclude_person_path(@group, @mailing_list), 'minus')

- if can?(:export_subscriptions, @mailing_list)
  = dropdown_subscriptions_export
