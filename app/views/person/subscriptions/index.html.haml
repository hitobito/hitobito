%h2=t('.my_subscriptions')
- subscribed.each do |layer, mailing_lists|
  %strong= layer.name
  = table(mailing_lists, class: 'table table-striped table-hover') do |t|
    - t.col(MailingList.human_attribute_name(:name), class: 'col-3') do |list|
      = mailing_list_name_with_group_name(list)
    - t.col(MailingList.human_attribute_name(:description), class: 'col-3') do |list|
      = list.description.to_s.truncate(60)
    - t.col(MailingList.human_attribute_name(:publisher), class: 'col-2') do |list|
      = list.publisher
    - t.col(MailingList.human_attribute_name(:mail_address), class: 'col-3') do |list|
      = mail_to list.mail_address
    - t.col('', class: 'col-1 right') do |list|
      = button_unsubscribe(list, person:, icons: false) if can?(:update, person)

.mt-4
  .d-flex.flex-column.flex-sm-row.justify-content-between.align-items-start.align-items-sm-center.gap-2
    %h2=t('.available_subscriptions')
    .btn-group.btn-group-sm
      = link_to t('.show_all'), 
                group_person_subscriptions_path(@group, person, view: 'all'),
                class: "btn btn-outline-primary btn-sm #{'active' if params[:view] != 'ancestors'}"
      = link_to t('.show_ancestors'), 
                group_person_subscriptions_path(@group, person, view: 'ancestors'),
                class: "btn btn-outline-primary btn-sm #{'active' if params[:view] == 'ancestors'}"

- lists_to_show = params[:view] == 'ancestors' ? subscribable_ancestors_only : subscribable
= content_tag(:div, ti(:no_list_entries)) if lists_to_show.none?

- lists_to_show.each do |layer, mailing_lists|
  %strong= layer.name
  = table(mailing_lists, class: 'table table-striped table-hover') do |t|
    - t.col(MailingList.human_attribute_name(:name), class: 'col-3') do |list|
      = mailing_list_name_with_group_name(list)
    - t.col(MailingList.human_attribute_name(:description), class: 'col-3') do |list|
      = list.description.to_s.truncate(60)
    - t.col(MailingList.human_attribute_name(:publisher), class: 'col-2') do |list|
      = list.publisher
    - t.col(MailingList.human_attribute_name(:mail_address), class: 'col-3') do |list|
      = mail_to list.mail_address
    - t.col('', class: 'col-1 right') do |list|
      = button_subscribe(list, person: person, icons: false) if can?(:update, person)