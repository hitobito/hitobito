#tag-lists-new.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h5.bold.modal-title
          %b=t('.title')

      = standard_form(:add_tag_list,
        url: group_tag_list_path(group), method: :post, remote: false) do |f|
        .modal-body
          .row-fluid
            = hidden_field_tag('ids', @people_ids.join(','))
            = f.text_field(:tags,
                           name: :tags,
                           placeholder: t('.tag_input_placeholder'),
                           data: { provide: 'entity',
                                   url: group_person_tags_query_path(group_id: group.id, person_id: @people_ids.first) })

        .modal-footer
          = submit_button(f, t('.submit', count: @people_count))
          = link_to(ti('button.cancel'), '#',
            class: 'link cancel',
            onclick: "event.preventDefault(); $('#tag-lists-new').modal('hide')")
