= entry_form do |f|
  .control-group
    %label.control-label
      = t('.attachment.subject')
    .controls.attachment_subject
      = entry.attachment.subject
  - unless entry.persisted?
    = f.labeled(:person, Person.model_name.human) do
      = f.person_field(:person)
    = f.labeled_input_field(:title)
  = f.labeled_input_field(:description)
  = f.hidden_field :attachment_id
  = f.hidden_field :attachment_type
