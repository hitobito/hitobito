= form_with url: users_second_factor_path(second_factor: authentication_factor), method: :post, class: 'form-horizontal' do |f|
  .control-group.required
    = f.label :second_factor_code, t('.totp_code'), class: 'control-label'
    .controls
      = f.text_field :second_factor_code, class: 'span3', autofocus: 'autofocus', autocomplete: 'one-time-code', placeholder: t('.totp_code_placeholder'), required: true
  .control-group
    .controls
      = f.submit(t('.submit'), class: 'btn btn-primary')
