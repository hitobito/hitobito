- options = local_assigns.fetch(:options, {}).merge(class: 'page-link')

.clearfix
  %ul.pagination.pagination-sm.float-end.mb-0
    - if path_to_prev_page(models, **options)
      %li.page-item= link_to_previous_page models, t('global.button.back'), **options
    %li.page-item= link_to_next_page models, t('global.button.next'), **options

