.pagination-bar
  = paginate @messages

= crud_table do |t|
  - t.col(Message.human_attribute_name(:subject)) do |message|
    %strong
      - if can?(:update, message.mailing_list)
        = link_to(message, [message.group, message.mailing_list, message])
      - else
        = message

  - t.sortable_attrs(:type, :state)

= paginate @messages
