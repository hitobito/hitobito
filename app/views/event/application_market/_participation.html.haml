%td
  %strong= link_to(p.to_s(:list), group_event_participation_path(@group, @event, p.id))
  %br/
  = p.person_location_information
  %br/
  .muted
    = t('.registered_at', datetime: f(p.created_at.to_datetime))

%td= p.application.priority(event) if event.attr_used?(:priorization)
%td= p.application&.precondition_warnings(event)
%td= p.application.approval_badge if event.requires_approval?

= render_extensions :participation, locals: { participation: p }
