- title t("crud.#{action_name}.title", model: entry.new_record? ? model_class_label(entry): h(entry.to_s)).html_safe

= entry_form(buttons_bottom: false) do |f|
  - if entry.new_record?
    = f.labeled_collection_select(:context, @contexts, :first, :second, {}, class: 'span6')

    - @keys.each do |context, group|
      %div.help_text_context_keys.hidden{ id: context }
        = f.labeled_grouped_collection_select(:key, group, :list, :label, :first, :second)

  = f.labeled_text_area :body, class: 'span8 wysiwyg', rows: 20
