= paginate @versions

- if @versions.present?
  - @versions.group_by(&:created_at).each do |created_at, versions|
    .row.log-item
      .col-4
        %h4
          = versions.first.header(include_changed_object: true)
      .log-infos.col-8
        - versions.each do |v|
          = v.changes

- else
  %div= t('people.log.no_changes')

= paginate @versions
