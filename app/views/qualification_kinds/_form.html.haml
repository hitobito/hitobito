= entry_form(buttons_bottom: false) do |f|
  = f.labeled_input_fields :label, :description
  = f.labeled_input_field(:validity, help: t('.help_validity_in_years'), class: 'd-inline ')
  = f.labeled_input_field(:reactivateable, help: t('.help_reactivateable_in_years'), class: 'd-inline ')
