= paginate entries
= crud_table(data: { checkable: true }) do |t|
  - t.col(check_box_tag(:all, 0, false, { data: :multiselect }), width: '50px') do |i|
    - if can?(:edit, i)
      - check_box_tag('ids[]', i.id, false, data: { multiselect: true })
  - t.sortable_attr(:category, t('activerecord.attributes.acts_as_taggable_on/tag.category')) do |i|
    = format_tag_category(i.category)
  - t.sortable_attrs(:name, :taggings_count)
  - add_table_actions(t)

= paginate entries
= render 'multiselect_actions'
