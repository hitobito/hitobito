- title t('.title', group: @group)

%p
  = t('.explanation')
  %br
  = t('.merge_is_irreversible')


= standard_form(:merger, url: merge_group_path(@group), builder: PlainObjectFormBuilder) do |f|
  = field_set_tag do
    = label(:merger, :new_group_name, t('.new_group_name'))
    = f.string_field(:new_group_name)

  = field_set_tag do
    = label(:merger, :merge_group_id, t('.merge_group_with', group: @group))
    - @candidates.each do |group|
      = f.inline_radio_button(:merge_group_id, group.id, group.to_s, false)

  = form_buttons(f, submit_label: t('.merge_button'), cancel_url: group_path(@group))
