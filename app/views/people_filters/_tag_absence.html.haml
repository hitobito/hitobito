- filter = entry.filter_chain[:tag_absence]
- selected = filter ? filter.to_hash[:names] : []
- options = options_from_collection_for_select(@possible_tags, :second, :first, selected)

%p= t('.prompt_tag_absence_selection')
.shown
  = select_tag('filters[tag_absence][names][]',
                options,
                class: 'form-control tom-select',
                multiple: true,
                data: { chosen_no_results: t('global.chosen_no_results'), placeholder: t('.prompt_tag_absence_placeholder') } )
