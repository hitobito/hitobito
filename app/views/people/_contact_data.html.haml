.contactable.well
  .profil-big.float-end
    .crop-to-square
      = image_tag(upload_url(person, :picture, size: '72x72', default: 'profil'), size: '72x72')
  .profile-image-overlay
    .img
      .crop-to-square
        = image_tag(upload_url(person, :picture, size: '512x512', default: 'profil'), size: '512x512')
  .contact-marker.float-end
    =  link_to_address person

  = render 'contactable/contact_data',
           contactable: person,
           postal: true,
           only_public: only_public

  - if person.household_people.present?
    = render_extensions 'household_attrs'
    %div
      %small= t('.lives_in_household_with')
      %br
      = render_household(person)
